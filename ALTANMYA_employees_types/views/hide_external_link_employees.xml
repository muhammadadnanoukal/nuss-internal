<?xml version="1.0" ?>
<odoo>
    <record id="view_hr_appraisal_form_inherit_link" model="ir.ui.view">
        <field name="name">hr.appraisal.form.inherit.link</field>
        <field name="model">hr.appraisal</field>
        <field name="inherit_id" ref="hr_appraisal.view_hr_appraisal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h1[1]/field[1]" position="attributes">
                <attribute name="options">{'no_open': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="fleet_vehicle_view_form_inherit_link" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.link</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet[1]/group[1]/group[2]/field[3]" position="attributes">
                <attribute name="options">{'no_open': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>