<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='extra_hr_additions_form' model='ir.ui.view'>
        <field name="name">extra_hr_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='job_id']" position="after">
                    <field name="social_security"/>
                    <field name="number_social"/>
                    <field name="date"/>
                    <field name="date_of_close"/>
                    <field name="medical_insurance"/>
                    <field name="number_of_medical"/>
                    <field name="date_of_start"/>
                    <field name="date_of_end"/>
            </xpath>
        </field>
    </record>

</odoo>

