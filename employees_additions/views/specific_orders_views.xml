<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='model_specific_orders_new_form' model='ir.ui.view'>
        <field name="name">model.specific.orders.form</field>
        <field name="model">specific.orders</field>
        <field name="arch" type="xml">
            <form string="انواع القرارات">
                <sheet>
                    <span class="o_form_label o_hr_form_label">
                        <h1>أنواع القرارات</h1>
                    </span>
                    <h2>
                        <field name="name" style="border: 1px solid #c5c3bd ;"/>
                    </h2>
                </sheet>
            </form>
        </field>
    </record>

    <record id='model_specific_orders_tree' model='ir.ui.view'>
        <field name="name">model.specific.orders.tree</field>
        <field name="model">specific.orders</field>
        <field name="arch" type="xml">
            <tree string="اسماء القرارات">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_specific_orders" model="ir.actions.act_window">
        <field name="name">انواع القرارات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">specific.orders</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First Work Decision!
            </p>
        </field>
    </record>

    <menuitem id="id_action_specific_orders"
              name="أنواع القرارات"
              action="action_specific_orders"
              parent="hr.menu_hr_employee_payroll"
              sequence="8"/>


</odoo>




