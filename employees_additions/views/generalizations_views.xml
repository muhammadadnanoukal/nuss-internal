<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='generalizations_form' model='ir.ui.view'>
        <field name="name">generalizations.employee.form</field>
        <field name="model">generalizations.employee</field>
        <field name="arch" type="xml">
            <form string="التعميمات">
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label o_hr_form_label">
                            <h1>العنوان</h1>
                        </span>
                        <h2>
                            <field name="title" style="border: 1px solid #c5c3bd ;"/>
                        </h2>
                    </div>
                    <div>
                        <span class="o_form_label o_hr_form_label">
                            <h3>التاريخ</h3>
                        </span>
                        <field name="date" style="border: 1px solid #c5c3bd ;"/>
                    </div>
                    <div>
                        <span class="o_form_label o_hr_form_label">
                            <h3>المحتوى</h3>
                        </span>
                        <field name="contents" style="border: 1px solid #c5c3bd ;"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id='responsibility_view_tree' model='ir.ui.view'>
        <field name="name">generalizations.employee.view.tree</field>
        <field name="model">generalizations.employee</field>
        <field name="arch" type="xml">
            <tree string="التعميمات">
                <field name="title"/>
                <field name="date"/>
                <field name="contents"/>
            </tree>
        </field>
    </record>

    <record id="action_generalizations_employee" model="ir.actions.act_window">
        <field name="name">التعميمات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generalizations.employee</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
            id="menu_generalizations_admin_employee"
            name="التعميمات"
            parent="hr.menu_hr_employee_payroll"
            action="action_generalizations_employee"
    />

</odoo>

